<mui:ModernDialog x:Class="WPFPresentation.Pages.SubPedidoAddValueDialogPage"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  Loaded="SubPedidoAddValueDialogPage_OnLoaded"
                  d:DesignHeight="300" d:DesignWidth="300" MinHeight="100" Height="100" Width="200"
                  Title="ValorSuPedido">


    <StackPanel  Orientation="Horizontal">
        <TextBlock Text="Precio Proveedor" FontWeight="Bold"  Margin="0,5,8,5" />
        <TextBox TabIndex="1" Name="TextBoxValor" GotFocus="UIElement_OnGotFocus" Width="80" Height="25" TextAlignment="Center" Text="{Binding PrecioProveedor, Mode=TwoWay, ValidatesOnDataErrors=True, StringFormat=c}" />
    </StackPanel>
</mui:ModernDialog>
